<%- include('./partials/header.ejs') %>

    <style>


body {
  background-image: url("/background/nattu-adnan-Ai2TRdvI6gM-unsplash.jpg");
  background-repeat: no-repeat;
  position: relative;
  background-size: cover;
  color: white;
  margin: 0;
  padding: 0;
  font-family: Georgia, 'Times New Roman', Times, serif;
}

.container {
  max-width: 600px;
  margin: 0 auto;
  padding: 20px;
  box-sizing: border-box;
}

h1 {
  margin-top: 0;
}

fieldset {
  border: 1px solid #ccc;
  padding: 20px;
  margin: 20px 0;
}

legend {
  padding: 0px 10px;
  font-weight: 500;
  color: var(--purple);
}

label {
  font-weight: 200;
  color: var(--bright-pink);
  display: block;
  margin-bottom: 10px;
}

input[type="text"],
textarea {
  width: 100%;
  margin: 10px 0;
  padding: 10px;
  box-sizing: border-box;
  border: 1px solid var(--dusty-blue);
}

input[type="submit"] {
  width: 100%;
  height: 50px;
  background: var(--purple);
  box-shadow: 2px 2px var(--bright-blue);
  font-family: 'Oswald';
  font-size: 1.3em;
  color: whitesmoke;
  border: none;
  transition: 0.2s ease-in-out;
  border: 2px solid;
}

input[type="submit"]:hover {
  cursor: pointer;
  background: var(--bright-blue);
  box-shadow: 2px 2px black;
}

.Backbutton {
  text-align: center;
  margin-top: 20px;
}

.Backbutton a {
  background: var(--purple);
  color: whitesmoke;
  padding: 10px;
  text-decoration: none;
  border: none;
  border-radius: 5px;
  display: inline-block;
  transition: background 0.3s ease-in-out;
}

.Backbutton a:hover {
  background: var(--bright-blue);
}

    </style>
    <div class="container">
        <h1>Edit Page</h1>

        <form action="/strategies/<%= strategy.id %>?_method=PUT" method="POST">
            <fieldset class="entry-info">
                <label for="title">Title:</label>
                <input type="text" name="title" value="<%= strategy.title %>">
                <label for="description">Description:</label>
                <textarea class="descbody" type="text" name="description"><%=strategy.description%></textarea>
                <label for="contributor">Contributor:</label>
                <input type="text" name="contributor" value="<%= strategy.contributor %>">
            </fieldset>
            <input type="submit" value="Edit Entry">
    </div>
    <div class="Backbutton">
        <a href="/strategies/<%= strategy.id %>"> Back </a>

    </div>


    </form>

    <%- include('./partials/footer.ejs') %>